<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TambahKontrak">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="38dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="KONTRAK KERJASAMA"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/source" />

            <LinearLayout
                android:id="@+id/view"
                android:layout_below="@id/label"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:textSize="18sp"
                    android:fontFamily="@font/source"
                    android:layout_gravity="center_vertical"
                    android:text="Perusahaan Pengelola Lanjut" />

                <EditText
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="80"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/view2"
                android:layout_below="@id/view"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:textSize="18sp"
                    android:fontFamily="@font/source"
                    android:layout_gravity="center_vertical"
                    android:text="Tipe Pengelolaan" />

                <Spinner
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="80"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/view3"
                android:layout_below="@id/view2"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:textSize="18sp"
                    android:fontFamily="@font/source"
                    android:layout_gravity="center_vertical"
                    android:text="Jenis Limbah" />

                <EditText
                    android:layout_marginLeft="10dp"
                    android:maxLines="10"
                    android:singleLine="false"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_weight="80"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/view4"
                android:layout_below="@id/view3"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:textSize="18sp"
                    android:fontFamily="@font/source"
                    android:layout_gravity="center_vertical"
                    android:text="Surat Pernyataan Tidak Memiliki Masalah Lingkungan" />

                <Button
                    android:layout_marginLeft="10dp"
                    android:maxLines="10"
                    android:singleLine="false"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:fontFamily="@font/source"
                    android:text="Upload File"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <Button
                android:id="@+id/tambah"
                android:layout_below="@id/view4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimaryDark"
                android:elevation="10dp"
                android:text="Tambah Data"
                android:textColor="@android:color/white"
                android:fontFamily="@font/source"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>